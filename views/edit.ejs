<%- include('./partials/header.ejs') %>
<div class="ui raised very padded text container segment form-container">
    <h2>Edit <%=trail.name%>:</h2>
<form class="ui form new-form" action="/trails/<%=trail.id%>?_method=PUT" method="POST">
    <div class="fields new-fields">
        <div class="twelve wide field">
            <label for="name">Name:</label>
            <input id="name" type="text" name="name" value="<%=trail.name%>">
        </div>
        <div class="twelve wide field">
            <label for="img">Image:</label>
            <input id="img" type="text" name="img" value="<%=trail.img%>">
        </div>
        <div class="twelve wide field">
            <label for="location">Location:</label>
            <input id="location" type="text" name="location" value="<%=trail.location%>">
        </div>
        <div class="twelve wide field">
            <label for="distance">Distance:</label>
            <input id="distance" type="text" name="distance" value="<%=trail.distance%>">
        </div>
        <div class="twelve wide field submit-btn">
            <input type="submit" value="Submit Changes">
        </div>
    </div>
</form>
</div>
</div>
</body>
</html>